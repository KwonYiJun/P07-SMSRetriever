<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#FFDBDB"
android:orientation="vertical"
android:paddingBottom="15dp"
android:paddingLeft="15dp"
android:paddingRight="15dp"
android:paddingTop="15dp"
tools:context="p07smsretriever.android.myapplicationdev.com.p07_smsretriever.FragmentSecond">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tvFrag2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Only SMS with this word" />

            <EditText
                android:id="@+id/etword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName" />

            <Button
                android:id="@+id/btnRetrieve2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Retrieve SMS" />

            <TextView
                android:id="@+id/tvsms2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SMS" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>